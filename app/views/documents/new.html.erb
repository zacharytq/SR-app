<%= form_for @document do |f| %>

<%= f.label :title %><br />
<%= f.text_field :title %><br />

<%= f.label :event %><br />
<%= f.select :event_id, Event.all.collect {|e| [e.name, e.id] }, include_blank: 'None' %><br />

<%= f.label :person_ids %><br />
<%= f.collection_check_boxes :person_ids, Person.all, :id, :full_name %><br />

<%= f.label :security_clearance %><br />
<%= f.select :security_clearance, options_for_select(current_user.user_clearance_options) %><br/>

<%= f.label :content %><br />
<%= f.text_area :content %><br />

<%= f.submit%>

<% end %>